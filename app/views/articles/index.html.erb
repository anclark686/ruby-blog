<h1>Articles</h1>

<div class="article_container">
  <ul class="articles">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <li>
          <%= link_to article.title, article %>
        </li>
        <hr >
      <% end %>
    <% end %>
  </ul>

  <p>Article count: <%= Article.public_count %> <p>
</div>

<button id="new_btn" ><%= link_to "New Article", new_article_path %></button>