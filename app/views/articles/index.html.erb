<h1>Articles</h1>

<div class="article_container">
  <ul class="articles">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <li>
          <%= link_to article.title, article %>
        </li>
        <hr >
      <% end %>
    <% end %>
  </ul>

  <p class="count">Article count: <%= Article.public_count %> <p>
</div>

<div class="btn-container">
  <%= link_to "<button class='new-btn'>New Article</button>".html_safe, new_article_path %>
</div>
