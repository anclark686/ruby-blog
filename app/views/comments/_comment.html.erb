<% unless comment.archived? %>
  <div class="comment">
  
    <p>
      <strong>Name:</strong>
      <%= comment.commenter %>
    </p>
    
    <p><strong>Comment:</strong></p>
    <p class="comment-body">
      <%= comment.body %>
    </p>

    <p>
      <%= link_to "<button class='del-btn'>Delete</button>".html_safe, 
            [comment.article, comment], data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
    </p>
  </div>
<% end %>